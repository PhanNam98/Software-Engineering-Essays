@model BDS_ML.Models.ModelDB.Post
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout_custom_admin.cshtml";
}
<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-left">
            <div class="page-title">
                <h1>Bài đăng</h1>
            </div>
        </div>
    </div>
    <div class="col-sm-8">
        <div class="page-header float-right">
            <div class="page-title">
                <ol class="breadcrumb text-right">
                    <li>Bài đăng</li>
                    <li>Danh sách bài đăng</li>
                    <li class="active">Chỉnh sửa bài đăng</li>
                </ol>
            </div>
        </div>
    </div>
</div>
@*<h1>Danh sách bài đăng</h1>*@
<partial name="~/Views/Shared/_StatusMessage.cshtml" for="@TempData["StatusMessage"]" />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID_Post" />
            <div class="form-group" hidden="hidden">
                <label asp-for="ID_Account" class="control-label"></label>
                <input asp-for="ID_Account" class="form-control" asp-items="ViewBag.ID_Account" />
                <span asp-validation-for="ID_Account" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PostTime" class="control-label"></label>
                <input asp-for="PostTime" class="form-control" />
                <span asp-validation-for="PostTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PostType" class="control-label"></label>
                <select asp-for="PostType" class="form-control" asp-items="ViewBag.PostType"></select>
                <span asp-validation-for="PostType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tittle" class="control-label"></label>
                <input asp-for="Tittle" class="form-control" />
                <span asp-validation-for="Tittle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Size" class="control-label"></label>
                <input asp-for="Size" class="form-control" />
                <span asp-validation-for="Size" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Project" class="control-label"></label>
                <select asp-for="Project" class="form-control" asp-items="ViewBag.Project"></select>
                <span asp-validation-for="Project" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RealEstateType" class="control-label"></label>
                <select asp-for="RealEstateType" class="form-control" asp-items="ViewBag.RealEstateType"></select>
                <span asp-validation-for="RealEstateType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                    <label asp-for="Post_Location.SingleOrDefault().Tinh_TP" class="control-label"></label>
                    <select  id="province" name="province" class="form-control" asp-items="ViewBag.Province"></select>
                    <span asp-validation-for="Post_Location.SingleOrDefault().Tinh_TP" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Post_Location.SingleOrDefault().Quan_Huyen" class="control-label"></label>
                    <select id="district" name="district" class="form-control"></select>
                    <span asp-validation-for="Post_Location.SingleOrDefault().Quan_Huyen" class="text-danger"></span>
                </div>*@
            <div class="form-group">
                <label asp-for="Post_Location.SingleOrDefault().Tinh_TP" class="control-label"></label>
                <select id="province" name="province" class="form-control" asp-items="ViewBag.Province"></select>
                <span asp-validation-for="Post_Location.SingleOrDefault().Tinh_TP" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Quận/Huyện</label><br />
                <select id="district" name="district" class="form-control" asp-items="ViewBag.District"><option disabled selected>---Chọn Quận/Huyện---</option></select><br />
                <span asp-validation-for="Post_Location.SingleOrDefault().Quan_Huyen" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post_Location.SingleOrDefault().Phuong_Xa" class="control-label"></label>
                <select asp-for="Post_Location.SingleOrDefault().Phuong_Xa" id="ward" name="ward" class="form-control" asp-items="ViewBag.Ward"></select>

                <span asp-validation-for="Post_Location.SingleOrDefault().Phuong_Xa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post_Location.SingleOrDefault().Duong_Pho" class="control-label"></label>
                <select asp-for="Post_Location.SingleOrDefault().Duong_Pho" id="street" name="street" class="form-control" asp-items="ViewBag.Street"></select>
                <span asp-validation-for="Post_Location.SingleOrDefault().Duong_Pho" class="text-danger"></span>
            </div>
            <div class="form-group" hidden="hidden">
                <label asp-for="Status" class="control-label"></label>
                <input asp-for="Status" class="form-control" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

<script>



    $(document).ready(function () {

        $("#district").change(function () {

            var id = $(this).val();
            var id_p = $("#province").val();
            $("#ward").empty();

            $.get("/Admin/ManagePostsAdmin/Get_ward", { province_id: id_p, district_id: id }, function (data) {

                var v = "";

                $.each(data, (i, v1) => {

                    v += "<option value=" + v1.id + ">" + v1.name + "</option>";

                });

                $("#ward").html(v);

            });

        });



        $("#province").change(function () {

            var id = $(this).val();

            $("#district").empty();
    
            $.get("/Admin/ManagePostsAdmin/Get_district", { province_id: id }, function (data) {
             
                var v = "";

                $.each(data, (i, v1) => {

                    v += "<option value=" + v1.id + ">" + v1.name + "</option>";

                });

                $("#district").html(v);

            });

        });
        $("#district").change(function () {

            var id = $(this).val();
            var id_p = $("#province").val();
            $("#street").empty();

            $.get("/Admin/ManagePostsAdmin/Get_street", { province_id: id_p, district_id: id }, function (data) {

                var v = "";

                $.each(data, (i, v1) => {

                    v += "<option value=" + v1.id + ">" + v1.name + "</option>";

                });

                $("#street").html(v);

            });

        });

    });

</script>
