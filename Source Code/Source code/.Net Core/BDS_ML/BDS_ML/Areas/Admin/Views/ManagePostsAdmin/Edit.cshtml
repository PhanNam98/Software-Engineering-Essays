<script>


    function IsEmpty() {
        if (document.getElementById("tittle").value === "") {
            alert("Tiêu đề phải được điền.");
            return false;
        }
        return true;
    }
    function deleteItem(a,a,a) {
        if (confirm('Bạn có chắc muốn xóa ảnh này không?')) {
            var idp = arguments[0];
            var idi = arguments[1];
            $.ajax({
                url: '@Url.Action("DeleteFile")',
                type: 'POST',
                data: { id:idp, idimage: idi }
            }).done(function (data) {
                if (data.result == "OK") {
                    alert("Xóa thành công");
                    document.getElementById(data.id).remove();
                    closeModal();
                }
                else if (data.message) {
                    alert(data.message);
                }
            }).fail(function () {
                alert("Đã có lỗi. Hãy thử lại.");
            })

        }
    }


    $(document).ready(function () {

        $("#district").click(function () {

            var id = $(this).val();
            var id_p = $("#province").val();
            $("#ward").empty();

            $.get("/Admin/ManagePostsAdmin/Get_ward", { province_id: id_p, district_id: id }, function (data) {

                var v = "";

                $.each(data, (i, v1) => {

                    v += "<option value=" + v1.id + ">" + v1.name + "</option>";

                });

                $("#ward").html(v);

            });

        });



        $("#province").click(function () {

            var id = $(this).val();

            $("#district").empty();

            $.get("/Admin/ManagePostsAdmin/Get_district", { province_id: id }, function (data) {

                var v = "";

                $.each(data, (i, v1) => {

                    v += "<option value=" + v1.id + ">" + v1.name + "</option>";

                });

                $("#district").html(v);

            });

        });
        $("#district").click(function () {

            var id = $(this).val();
            var id_p = $("#province").val();
            $("#street").empty();

            $.get("/Admin/ManagePostsAdmin/Get_street", { province_id: id_p, district_id: id }, function (data) {

                var v = "";

                $.each(data, (i, v1) => {

                    v += "<option value=" + v1.id + ">" + v1.name + "</option>";

                });

                $("#street").html(v);

            });

        });

    });

    // Open the Modal
    function openModal() {
        document.getElementById("myModal").style.display = "block";
    }



    // Close the Modal
    function closeModal() {
        document.getElementById("myModal").style.display = "none";
    }

    var slideIndex = 1;
    showSlides(slideIndex);

    // Next/previous controls
    function plusSlides(n) {
        showSlides(slideIndex += n);
    }

    // Thumbnail image controls
    function currentSlide(n) {
        showSlides(slideIndex = n);
    }

    function showSlides(n) {
        var i;
        var slides = document.getElementsByClassName("mySlides");
        var dots = document.getElementsByClassName("demo");
        var captionText = document.getElementById("caption");
        if (n > slides.length) { slideIndex = 1 }
        if (n < 1) { slideIndex = slides.length }
        for (i = 0; i < slides.length; i++) {
            slides[i].style.display = "none";
        }
        for (i = 0; i < dots.length; i++) {
            dots[i].className = dots[i].className.replace(" active", "");
        }
        slides[slideIndex - 1].style.display = "block";
        dots[slideIndex - 1].className += " active";
        captionText.innerHTML = dots[slideIndex - 1].alt;
    }



</script>
