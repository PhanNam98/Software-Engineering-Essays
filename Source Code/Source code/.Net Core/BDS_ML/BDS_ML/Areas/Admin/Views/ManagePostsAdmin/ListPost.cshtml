                                <div class="modal fade" id="@hide" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="center">
                                        <div class="modal-dialog modal-dialog-center" role="document">
                                            <div class="modal-content">
                                                @using (Html.BeginForm("HidePost", "ManagePostsAdmin", FormMethod.Post, htmlAttributes: new { enctype = "multipart/form-data", @class = "dropzone dropzone-custom needsclick add-professors dz-clickable", @id = "hideform", @novalidate = "novalidate", @name = "hideform" }))
                                                {
                                                    @Html.ValidationSummary(true, null, new { @class = "alert alert-block alert-danger fade in" })
