@model IEnumerable<BDS_ML.Models.CustomModel.PostCustom>

@{
    ViewData["Title"] = "Danh sách bài đăng";
    Layout = "~/Views/Shared/_Layout_custom_admin.cshtml";
}
<style>
    /*.table {
        table-layout: fixed;
    }*/
    /*div.dataTables_wrapper {
        width: 100%;
        margin: 0 auto;
    }*/
</style>
<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-left">
            <div class="page-title">
                <h1>Bài đăng</h1>
            </div>
        </div>
    </div>
    <div class="col-sm-8">
        <div class="page-header float-right">
            <div class="page-title">
                <ol class="breadcrumb text-right">
                    <li>Bài đăng</li>
                    <li class="active">Danh sách bài đăng</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<h1>Danh sách bài đăng</h1>
<partial name="~/Views/Shared/_StatusMessage.cshtml" for="@TempData["StatusMessage"]" />
<p>

    <form method="GET">
        <button type="submit" class="btn btn-custon-rounded-three btn-primary btn-xs" asp-action="Create">Tạo bài viết</button>
    </form>
</p>
<table id="bootstrap-data-table" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>
                    @Html.DisplayName("ID")
                </th>
                <th>
                    @Html.DisplayName("Ngày đăng")
                </th>
                <th>
                    @Html.DisplayName("Tiêu đề")
                </th>
                <th>
                    @Html.DisplayName("Kích thước(m2)")
                </th>
                <th>
                    @Html.DisplayName("Giá(triệu)")
                </th>
                <th>
                    @Html.DisplayName("Miêu tả")
                </th>
                <th>
                    @Html.DisplayName("Tình trạng bài")
                </th>
                <th>
                    @Html.DisplayName("Id người đăng")
                </th>
                <th>
                    @Html.DisplayName("Loại bài")
                </th>
                <th>
                    @Html.DisplayName("Dự án")
                </th>
                <th>
                    @Html.DisplayName("Loại")
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.post.ID_Post)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.post.PostTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.post.Tittle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.post.Size)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.post.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.post.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.statusPost)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.post.ID_AccountNavigation.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.post.PostTypeNavigation.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.post.ProjectNavigation.id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.post.RealEstateTypeNavigation.Description)
                </td>
                <td>
                    <form method="GET">
                        <button type="submit" class="btn btn-custon-rounded-three btn-success btn-xs" asp-route-id="@item.post.ID_Post" asp-action="Details">Chi tiết</button>
                    </form>
                    |
                    <a asp-action="Details" asp-route-id="@item.post.ID_Post">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.post.ID_Post">Delete</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
    <script>
        $(document).ready(function () {
            $('.table').DataTable({
                "scrollX": true
            });
            "columnDefs": [{
                "defaultContent": "-",
                "targets": "_all"
            }]
        });
