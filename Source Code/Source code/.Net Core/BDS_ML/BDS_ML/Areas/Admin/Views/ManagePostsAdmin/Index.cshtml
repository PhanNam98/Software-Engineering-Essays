@model IEnumerable<BDS_ML.Models.ModelDB.Post>

@{
    ViewData["Title"] = "Danh sách bài đăng";
    Layout = "~/Views/Shared/_Layout_custom_admin.cshtml";
}
<style>
    .table {
        table-layout: fixed;
    }
</style>
<h1>Danh sách bài đăng</h1>
<partial name="~/Views/Shared/_StatusMessage.cshtml" for="@TempData["StatusMessage"]" />
<p>
    <a asp-action="Create">Tạo bài đăng</a>
</p>
<table id="bootstrap-data-table" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PostTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tittle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Size)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ID_AccountNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PostTypeNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProjectNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RealEstateTypeNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PostTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tittle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Size)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ID_AccountNavigation.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostTypeNavigation.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProjectNavigation.id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RealEstateTypeNavigation.Description)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID_Post">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID_Post">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID_Post">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
