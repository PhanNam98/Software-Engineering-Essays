    .modal-dialog {
        width: 100%;
        margin-left: 30%;
        margin-right: 10%;
    }





    /*.modal-dialog {
        margin-left: 20px;
        margin-right: -200px;
        padding: 0;
        z-index: 1050;
    }*/
</style>
<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-left">
            <div class="page-title">
                <h1>Bài đăng</h1>
            </div>
        </div>
    </div>
    <div class="col-sm-8">
        <div class="page-header float-right">
            <div class="page-title">
                <ol class="breadcrumb text-right">
                    <li>Bài đăng</li>
                    <li class="active">Danh sách bài đăng</li>
                </ol>
            </div>
        </div>
    </div>
</div>
@*<h1>Danh sách bài đăng</h1>*@
<partial name="~/Views/Shared/_StatusMessage.cshtml" for="@TempData["StatusMessage"]" />
<p>
    <form method="GET">
        <button type="submit" class="btn btn-custon-rounded-three btn-primary btn-xs" asp-action="Create">Tạo bài viết</button>
    </form>
</p>
@*<div style="width: auto; height: 350px; overflow-y: scroll;">*@
<div>
    <table id="exam" class="table table-striped table-bordered">

        <thead>
            <tr>
                <th>
                    @Html.DisplayName("ID")
                </th>
                <th>
                    @Html.DisplayName("Ngày đăng")
                </th>
                <th>
                    @Html.DisplayName("Tiêu đề")
                </th>
                <th>
                    @Html.DisplayName("Kích thước(m2)")
                </th>
                <th>
                    @Html.DisplayName("Giá(triệu)")
                </th>
                <th>
                    @Html.DisplayName("Miêu tả")
                </th>
                <th>
                    @Html.DisplayName("Tình trạng bài")
                </th>
                <th>
                    @Html.DisplayName("Id người đăng")
                </th>
                <th>
                    @Html.DisplayName("Loại bài")
                </th>
                @*<th>
                        @Html.DisplayName("Dự án")
                    </th>*@
                <th>
                    @Html.DisplayName("Loại")
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.post.ID_Post)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.post.PostTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.post.Tittle)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.post.Size)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.post.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.post.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.statusPost)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.post.ID_AccountNavigation.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.post.PostTypeNavigation.Description)
                    </td>
                    @*<td>
                            @Html.DisplayFor(modelItem => item.post.ProjectNavigation.id)
                        </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.post.RealEstateTypeNavigation.Description)
                    </td>
                    <td>
                        <form method="GET">
                            <button type="submit" class="btn btn-custon-rounded-three btn-success btn-xs" asp-route-id="@item.post.ID_Post" asp-action="Details">Chi tiết</button>
                        </form>
                        @{

                            if (item.post.Post_Status.LastOrDefault().Status == 1)
                            {

                                string blockq = "b" + @item.post.ID_Post.ToString();
                                <button type="button" class="btn btn-custon-rounded-three btn-warning btn-xs" data-toggle="modal" data-target="#@blockq">Khóa</button>

                                <!-- Modal -->

                                <div class="modal fade" id="@blockq" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="center">
                                        <div class="modal-dialog modal-dialog-center" role="document">
                                            <div class="modal-content">
                                                @using (Html.BeginForm("BlockPost", "ManagePostsAdmin", FormMethod.Post, htmlAttributes: new { enctype = "multipart/form-data", @class = "dropzone dropzone-custom needsclick add-professors dz-clickable", @id = "blockform", @novalidate = "novalidate", @name = "blockform" }))
                                                {
                                                    @Html.ValidationSummary(true, null, new { @class = "alert alert-block alert-danger fade in" })
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="exampleModalLabel">Khóa bài đăng</h5>
                                                        <button type="button" class="close" data-dismiss="modal" aria-label="Đóng">
                                                            <span aria-hidden="true">&times;</span>
                                                        </button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <div class="row form-group">
                                                            <div class="col col-md-3">@Html.Label("Mã bài đăng")</div>
                                                            <div class="col-12 col-md-9">
                                                                <input type="text" name="idpost" class="input-md form-control" value="@item.post.ID_Post" readonly>
                                                            </div>
                                                        </div>
                                                        <div class="row form-group">
                                                            <div class="col col-md-3">@Html.Label("Lí do khóa")</div>
                                                            <div class="col-12 col-md-9">
                                                                <input type="text" name="reasonBlockPost" class="input-md form-control" value="" id="reasonBlockPost" placeholder="Lí do khóa">
                                                                @* @Html.TextBox("reasonBlockCus", null, htmlAttributes: new { @name = "reasonBlockCus", @class = "form-control", @placeholder = "Lí do khóa", required = "required" })*@
                                                            </div>
                                                        </div>
                                                        <div class="row form-group">
                                                            <div class="col col-md-12">
                                                                <strong> <a>Bạn muốn khóa bài đăng này?</a></strong>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="submit" class="btn btn-success" onclick="return IsEmpty();">Đồng ý</button>
                                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
                                                    </div>

                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                @*<form action="@Url.Action("BlockPost", "ManagePostsAdmin", new { idpost = item.post.ID_Post })" method="post">
                                        <input type="submit" value="Khóa" class="btn btn-custon-rounded-three btn-warning btn-xs">
                                    </form>*@
                            }
                            else if (item.post.Post_Status.LastOrDefault().Status == 3)
                            {
                                <form action="@Url.Action("UnBlockPost", "ManagePostsAdmin", new { idpost = item.post.ID_Post })" method="post">
                                    <input type="submit" value="Mở khóa" class="btn btn-custon-rounded-three btn-primary btn-xs">
                                </form>
                            }
                            else if (item.post.Post_Status.LastOrDefault().Status == 5)
                            {
                                string accept = "acc" + item.post.ID_Post.ToString();

                                <button type="button" class="btn btn-custon-rounded-three btn-success btn-xs" data-toggle="modal" data-target="#@accept">Duyệt bài</button>

                                <!-- Modal -->

                                <div class="modal fade" id="@accept" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="center">
                                        <div class="modal-dialog" role="document">
                                            <div class="modal-content">
                                                @using (Html.BeginForm("AcceptPost", "ManagePostsAdmin", FormMethod.Post, htmlAttributes: new { enctype = "multipart/form-data", @class = "dropzone dropzone-custom needsclick add-professors dz-clickable", @idpost = item.post.ID_Post, @id = "acceptform", @name = "acceptform", @novalidate = "novalidate" }))
                                                {
                                                    @Html.ValidationSummary(true, null, new { @class = "alert alert-block alert-danger fade in" })
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="exampleModalLabel">Duyệt bài đăng</h5>
                                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                            <span aria-hidden="true">&times;</span>
                                                        </button>
                                                    </div>
                                                    <div class="modal-body">

                                                        <div class="row form-group">
                                                            <div class="col col-md-3">@Html.Label("Mã bài đăng")</div>
                                                            <div class="col-12 col-md-9">
                                                                <input type="text" name="idpost" class="input-md form-control" value="@item.post.ID_Post" readonly>
                                                            </div>


                                                        </div>
                                                        <div class="row form-group">
                                                            <div class="col col-md-3">@Html.Label("Tiêu đề")</div>
                                                            <div class="col-12 col-md-9">
                                                                <input type="text" name="tittle" class="input-md form-control" value="@item.post.Tittle" readonly>
                                                            </div>
                                                        </div>

                                                        <div class="row form-group">
                                                            <div class="col col-md-12">
                                                                <strong> <a>Bạn muốn duyệt bài đăng này?</a></strong>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="submit" class="btn btn-success">Đồng ý</button>
                                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
                                                    </div>

                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                @*<form action="@Url.Action("AcceptPost", "ManagePostsAdmin", new { idpost = item.post.ID_Post })" method="post">
                                        <input type="submit" value="Mở khóa" class="btn btn-custon-rounded-three btn-primary btn-xs">
                                    </form>*@
                            }
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
