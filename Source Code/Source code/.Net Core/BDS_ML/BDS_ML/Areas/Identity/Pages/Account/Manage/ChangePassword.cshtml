<partial name="_StatusMessage" for="StatusMessage" />
<div class="col-lg-1">
</div>
<div class="col-lg-9">
    <div class="card">
        <div class="card-header">
            <strong>Thay đổi mật khẩu</strong>
        </div>
        <div class="card-body card-block">
            <form id="change-password-form" method="post" class="form-horizontal">

                <div class="row form-group">
                    <div class="col col-md-1">

                    </div>
                    <div asp-validation-summary="All" class="text-danger"></div>

                </div>
                    <div class="row form-group">
                        <div class="col col-md-3">
                            <label>Mật khẩu cũ</label>
                        </div>
                        <div class="col-12 col-md-9">
                            <input asp-for="Input.OldPassword" class="form-control" />
                            <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
                        </div>

                    </div>

                    <div class="row form-group">
                        <div class="col col-md-3">
                            <label>Mật khẩu mới</label>
                        </div>
                        <div class="col-12 col-md-9">
                            <input asp-for="Input.NewPassword" class="form-control" />
                            <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col col-md-3">
                            <label>Xác nhận lại mật khẩu</label>
                        </div>
                        <div class="col-12 col-md-9">
                            <input asp-for="Input.ConfirmPassword" class="form-control" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>


                    <div class="card-footer">
                        <button id="update-password-button" type="submit" class="btn btn-primary" title="Lưu">Lưu</button>
                        <button type="button" class="btn btn-secondary"><a class="text-white" asp-area="Identity" asp-page="/Account/Manage/ChangePassword" title="Hủy">Hủy</a></button>
                    </div>
</form>

        </div>

    </div>

</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}