@page
@model SetPasswordModel
@{
    ViewData["Title"] = "Set password";

}

<h4>Đặt mật khẩu của bạn</h4>
<partial name="_StatusMessage" for="StatusMessage" />
<p class="text-info">
    Bạn không đặt mật khẩu cho tài khoản. Đặt mật khẩu giúp bạn đăng nhập thông qua Email và mật khẩu.
</p>
<div class="col-lg-1">
</div>
<div class="col-lg-9">
    <div class="card">
        <div class="card-header">
            <strong>Thông tin tài khoản</strong>
        </div>
        <div class="card-body card-block">
            <form id="set-password-form" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="row">
                    <div class="col-md-2">

                    </div>
                    <div class="col-md-8">
                        <div class="form-group">
                            <label asp-for="Input.NewPassword"></label>
                            <input asp-for="Input.NewPassword" class="form-control" />
                            <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-2">

                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2">

                    </div>
                    <div class="col-md-8">
                        <div class="form-group">
                            <label asp-for="Input.ConfirmPassword"></label>
                            <input asp-for="Input.ConfirmPassword" class="form-control" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-2">

                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2">

                    </div>
                    <div class="col-md-8">
                        <button type="submit" class="btn btn-primary">Đặt mật khẩu</button>
                        <a class="btn btn-secondary" asp-area="Identity" asp-page="/Account/Manage/Index" title="Hủy">Hủy</a>
                    </div>
                 
                </div>
              
            </form>
        </div>
    </div>
 </div>



    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
