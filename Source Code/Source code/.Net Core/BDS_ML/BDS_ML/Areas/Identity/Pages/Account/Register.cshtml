@page
@model RegisterModel
@{
    ViewData["Title"] = "Đăng kí tài khoản";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data" asp-route-returnUrl="@Model.ReturnUrl" method="post"  >
            <h4>Tạo một tài khoản mới.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label>Email</label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Họ</label>
                <input asp-for="Input.FirstName" class="form-control" />
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Tên</label>
                <input asp-for="Input.LastName" class="form-control" />
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Số điện thoại</label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Địa chỉ</label>
                <input asp-for="Input.Address" class="form-control" />
                <span asp-validation-for="Input.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*<label asp-for="Input.Avatar_URL"></label>
        <div class="custom-file">
            <input asp-for="Input.Avatar_URL" class="form-control custom-file-input" accept="image/*"/>
            <label class="custom-file-label">Chọn ảnh</label>
            <span asp-validation-for="Input.Avatar_URL" class="text-danger"></span>
        </div>*@
                @*<label>Upload Image</label>
                <input type="file" class="form-control" name="image" accept="image/*" />*@
                <label for="file-input" class=" form-control-label">Ảnh đại diện</label>
                <input type="file" id="file-input" name="file" accept="image/*" class="form-control-file">
            </div>
            <div class="form-group">
                <label>Mật khẩu</label>
                <input asp-for="Input.Password" class="form-control" />
             
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Xác nhận mật khẩu</label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Đăng kí</button>
        </form>
    </div>
</div>

